<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:backgroundTint="#133D60"
    android:background="#133D60"
    android:layout_height="wrap_content"
    tools:context=".Planes">


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_top"
        android:backgroundTint="#133D60"
        android:background="#133D60"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintDimensionRatio="w,1:1"
        app:layout_constraintGuide_begin="56dp" />

    <LinearLayout
        android:id="@+id/linear_layout_planes"
        android:layout_width="416dp"
        android:layout_height="146dp"
        android:layout_marginTop="10dp"
        android:background="#95A1A9"
        android:backgroundTint="#95A1A9"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        tools:background="#A886E4">>

        <LinearLayout
            android:id="@+id/lineal_layout_plan1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#95A1A9"
            android:backgroundTint="#95A1A9"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tituloPlan1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Titulo plan 1"
                android:textSize="25sp"
                android:textStyle="bold"
                tools:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/dato1_plan1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HORARIO: "
                tools:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/dato2_plan1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="UBICACIÃ“N: "
                tools:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/dato3_plan1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ASISTENTES: 32"
                tools:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/attendeesTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/commentsTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>